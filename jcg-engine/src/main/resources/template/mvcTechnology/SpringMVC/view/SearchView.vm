<%@ page contentType="text/html;charset=UTF-8" language="java"
pageEncoding="UTF-8" trimDirectiveWhitespaces="true" %>
<%@ taglib prefix="sf" uri="http://www.springframework.org/tags/form" %>
<%@ taglib prefix="form" uri="http://sk.ir/patienttalk/zurb-foundation-form" %>
<%@ taglib prefix="u" uri="http://sk.ir/patienttalk/utils" %>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="filter" uri="http://sk.ir/common/tags/security-filter" %>

<div class="my-panel">
    <div class="my-panel-header">
        <h3 class="my-panel-title">${view.name}</h3>
    </div>
    <div class="my-panel-body">
        <div class="column small-12 medium-12 large-12">
            <div class="my-panel">
                <div class="my-panel-body">
                    <form:form modelAttribute="userSearchData">
                        #set($components = ${view.components})
                        #viewComponents($components $view.span)
                    </form:form>
                </div>
            </div>

            <div class="my-panel">
                <table style="width:100%">
                    #dataGridHeaders($view.dataGrid)
                    #dataGridContents($view)
                </table>
                <div class="my-panel-footer">
                    <form:paging name="page" method="get" modelAttribute="userSearchData" list="${users}" cssClass="paging"></form:paging>
                </div>
            </div>
        </div>
    <div class="my-panel-footer">
        <h3 class="my-panel-title"></h3>
    </div>
</div>
